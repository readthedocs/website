/* Pricing page - tables
 * TODO replace this with native SUI, these aren't needed. */
#pricing #tables {
  .ui.header.divider {
    margin-top: 42px;
  }

  .card .button.fluid {
    margin: 25px 0;
  }
  .card > .content > .description {
